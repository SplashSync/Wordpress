{
    "name": "splash/wordpress",
    "description": "Splash plugin for Wordpress",

    "license": "MIT",

    "minimum-stability": "dev",
    "prefer-stable": true,
    
    "config": {
        "vendor-dir":                   "vendor",
        "preferred-install":            "dist"
    },
    
    "autoload": {
        "psr-4": { "Splash\\Local\\": "src" },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    
    "require": {
        "php":                              "^7.2",
        "splash/phpcore":                   "dev-master"
    },
    
    "require-dev": {
        "badpixxel/php-sdk":                "dev-main",
        "splash/console":                   "dev-master",
        "phpunit/phpunit":                  "^7.0"
    },
    
    "autoload-dev": {
        "psr-4": { "Splash\\Tests\\": "src/Tests/" }
    }
}
